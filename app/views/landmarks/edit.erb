<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<h2>Edits for <%= @landmark.name %></h2>

  <form action="/landmarks/<%= @landmark.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Landmark's Name:</label>
    <br>
    <input type="text" name="landmark[name]" id="landmark_name" value="<%= @landmark.name %>">

    <br>
    <label>Edit the Landmark's Year Completed:</label>
    <br>
    <input type="text" name="landmark[year_completed]" id="landmark_year_completed" value="<%=@landmark.year_completed%>">

    <input type="submit" value="Update Landmark">
  </form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
